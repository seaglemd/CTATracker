<Ui xmlns="http://www.blizzard.com/wow/ui" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.blizzard.com/wow/ui/..\..\FrameXML\UI.xsd">
  <Frame name="CTATracker_MainFrame" enableMouse="true" movable="true" parent="UIParent">
    <Size>
      <AbsDimension x="140" y="60" />
    </Size>
    <Anchors>
      <Anchor point="CENTER" />
    </Anchors>
    <Layers>
      <Layer level="BACKGROUND">
        <Texture>
          <Size>
            <AbsDimension x="140" y="60" /></Size>
            <Color r="0" g="0" b="0" a="0.90" />
        </Texture>
      </Layer>
    </Layers>
    <Scripts>
      <OnLoad>
        CTATracker_MainFrame:SetScale(1);
        CTATracker_CreateBasicFrames();
      </OnLoad>
      <OnMouseDown>
        if button == "LeftButton" and not self.isMoving then
          self:StartMoving();
          self.isMoving = true;
        end
      </OnMouseDown>
      <OnMouseUp>
        if button == "LeftButton" and self.isMoving then
          self:StopMovingOrSizing();
          self.isMoving = false;
        end
      </OnMouseUp>
      <OnHide>
        if ( self.isMoving ) then
          self:StopMovingOrSizing();
          self.isMoving = false;
        end
      </OnHide>
    </Scripts>
    <Frames>
      <Frame name="CTATracker_TopAnchorFrame">
        <Size>
          <AbsDimension x="140" y="1" />
        </Size>
        <Anchors>
          <Anchor point="TOP" relativeTo="CTATracker_MainFrame">
            <Offset>
              <AbsDimension x="0" y="0" />
            </Offset>
          </Anchor>
        </Anchors>
        <Layers>
          <Layer level="BACKGROUND">
            <Texture>
              <Size>
                <AbsDimension x="140" y="1" />
              </Size>
              <Color r="0" g="0" b="0" a="0.90" />
            </Texture>
          </Layer>
        </Layers>
      </Frame>
      <Frame name="CTATracker_BottomAnchorFrame">
        <Size>
          <AbsDimension x="140" y="1" />
        </Size>
        <Anchors>
          <Anchor point="BOTTOM" relativeTo="CTATracker_MainFrame">
            <Offset>
              <AbsDimension x="0" y="0" />
            </Offset>
          </Anchor>
        </Anchors>
        <Layers>
          <Layer level="BACKGROUND">
            <Texture>
              <Size>
                <AbsDimension x="140" y="1" />
              </Size>
              <Color r="0" g="0" b="0" a="0.90" />
            </Texture>
          </Layer>
        </Layers>
      </Frame>
      <Frame name="CTATracker_HeroicTitleFrame">
        <Size>
          <AbsDimension x="134" y="28" />
        </Size>
        <Anchors>
          <Anchor point="TOPLEFT" relativeTo="CTATracker_TopAnchorFrame">
            <Offset>
              <AbsDimension x="3" y="-2" />
            </Offset>
          </Anchor>
        </Anchors>
        <Layers>
          <Layer level="BACKGROUND">
            <Texture>
              <Size>
                <AbsDimension x="134" y="28" />
              </Size>
              <Color r="0.10" g="0.10" b="0.10" a="0.90" />
            </Texture>
          </Layer>
        </Layers>
      </Frame>
    </Frames>
  </Frame>
</Ui>
